<?xml version="1.0"?>
<!-- Velocity Tools 2.0-style toolbox configuration. -->
<tools>
	<toolbox scope="application">
		<tool class="org.apache.velocity.tools.generic.RenderTool" />
		<tool class="org.demyo.web.velocity.tools.PagingTool" />
		<tool class="org.demyo.web.velocity.tools.RteTool" />
		<tool class="org.apache.velocity.tools.generic.DateTool" format="yyyy-MM-dd"/>
		<tool class="org.apache.velocity.tools.generic.NumberTool" />
		<tool class="org.apache.velocity.tools.generic.EscapeTool" />
		<tool class="org.demyo.web.velocity.tools.FormTool" />
	</toolbox>
	<toolbox scope="request">
		<tool class="org.apache.velocity.tools.generic.ContextTool" />
		<tool class="org.apache.velocity.tools.view.LinkTool" />
		<tool class="org.demyo.web.velocity.tools.JavascriptTool" />
		<tool class="org.demyo.web.velocity.tools.QuickTasksTool" />
	</toolbox>
</tools>