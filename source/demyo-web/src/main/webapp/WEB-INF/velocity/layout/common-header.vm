<!DOCTYPE html>
<html>
## Set the reader service. Can be missing if we are on an exception page
#if ($!demyoReaderService)
	$readerContext.setReaderService($demyoReaderService)
#end
	<head>
#if($!pageTitle)
		<title>$pageTitle - Demyo</title>
#else
		<title>Demyo</title>
#end
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<meta name="application-name" content="Demyo">
		<meta name="mobile-web-app-capable" content="yes">
		<link rel="manifest" href="/manifest.json">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-title" content="Demyo">
		<meta name="msapplication-starturl" content="/">
		
		<meta name="robots" content="noindex,nofollow"> ## In case someone exposes it publicly by mistake
		<meta name="referrer" content="never"> ## Don't send info to linked sites, this is supposed to be a private application
		
		<link rel="copyright" href="$link.contextPath/about">
		
		<link href="$link.contextPath/css/demyo-icons.css" rel="stylesheet" type="text/css">
		<link href="$link.contextPath/css/vendor/dialog-polyfill.css" rel="stylesheet" type="text/css">
		<link href="$link.contextPath/css/vendor/chosen.less" rel="stylesheet/less" type="text/css">
		<link href="$link.contextPath/css/vendor/material.blue-pink-1.3.0.min.css" rel="stylesheet" type="text/css">
		<link href="$link.contextPath/css/demyo.blue-pink.less" rel="stylesheet/less" type="text/css">
		
		#foreach ($size in [76, 120, 152, 180])
			<link rel="apple-touch-icon-precomposed" sizes="${size}x${size}" href="$link.contextPath/icons/demyo-${size}-whitebg.png">##
		#end
		
		#foreach ($size in [16, 24, 32, 48, 64, 144, 192, 196, 270, 558])
			<link rel="icon" sizes="${size}x${size}" href="$link.contextPath/icons/demyo-${size}.png" >##
		#end
		
		<meta name="msapplication-TileColor" content="#FFFFFF">
		<meta name="msapplication-TileImage" content="$link.contextPath/icons/demyo-144.png">
		
#if ($loadLessInAsync)
		<script type="text/javascript">
			less = {
				async: true
			}
		</script>
#end
		<script type="text/javascript" src="$link.contextPath/js/vendor/less-2.7.2.min.js"></script>
		$javascript.load('Demyo.Core') ## Always load the core
		$javascript.load('Demyo.QuickSearch') ## Always load quick search
#foreach($source in $javascript.scriptSources)
		<script type="text/javascript" src="$link.contextPath/js/$source"></script>
#end
		<script type="text/javascript">
## TODO: do this in a nicer way
demyo.l10n['quickTasks.confirm.title'] = '#_("javascript.quickTasks.confirm.title")';
demyo.l10n['quickTasks.confirm.ok.label'] = '#_("javascript.quickTasks.confirm.ok.label")';
demyo.l10n['quickTasks.confirm.cancel.label'] = '#_("javascript.quickTasks.confirm.cancel.label")';
		</script>

	</head>
	<body #if($!bodyClasses)class="$bodyClasses"#end data-tinymce-lang="#_('javascript.l10n.tinyMCE')">
