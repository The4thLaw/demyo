#setPageTitleParams('title.view.tag' $tag.identifyingName)

$javascript.load('Demyo.QuickTasks')

$quickTasks.add({
	"id" : "qt-edit-tag",
	"url" : "../edit/$tag.id",
	"icon": "tag+add"
})
$quickTasks.add({
	"id" : "qt-delete-tag",
	"url" : "../delete/$tag.id",
	"icon": "tag+delete",
	"confirm" : true
})

## Grids are not really required here, but theyr provide a more consistent look & feel compared to other pages
<div class="mdl-grid">
	#@mdlGridCell([12,0,0])
		#@entityField('field.Tag.identifyingName')
			#tag($tag)
		#end
		
		#if (!$tag.taggedAlbums.empty)
			#@entityField('field.Tag.taggedAlbums')
				#textCardListAlbums($tag.taggedAlbums false)
			#end
		#end
	#end
</div>